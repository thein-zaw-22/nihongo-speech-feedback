# =============================================================================
# Whisper Feedback POC - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Django Configuration
# =============================================================================
SECRET_KEY=dev-secret-key-change-me
DEBUG=True

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Options: openai, gemini, bedrock
LLM_PROVIDER=openai

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Required if LLM_PROVIDER=openai
#OPENAI_API_KEY=sk-your-openai-api-key-here
#OPENAI_MODEL_ID=gpt-4o-mini

# =============================================================================
# Google Gemini Configuration
# =============================================================================
# Required if LLM_PROVIDER=gemini
#GEMINI_API_KEY=your-gemini-api-key-here
#GEMINI_MODEL_ID=gemini-2.5-flash-lite

# =============================================================================
# AWS Bedrock Configuration
# =============================================================================
# Required if LLM_PROVIDER=bedrock
#AWS_REGION_NAME=us-east-1
#AWS_ACCESS_KEY_ID=your-aws-access-key-here
#BEDROCK_MODEL_ID=amazon.nova-lite-v1:0
#BEDROCK_INFERENCE_PROFILE_ARN=arn:aws:bedrock:region:account:inference-profile/model-id

# =============================================================================
# Rate Limiting (Requests Per Minute)
# =============================================================================
OPENAI_GPT4O_RPM=1000
OPENAI_GPT4O_MINI_RPM=500
GEMINI_25_FLASH_LITE_RPM=15
AWS_NOVA_LITE_RPM=200
